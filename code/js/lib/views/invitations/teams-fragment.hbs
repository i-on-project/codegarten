{{#if isEmpty}}
    <h5 style="text-align: center;">No teams available</h5>
{{else}}
     <div class="row">
        {{#each teams}}
            <div class="col-md-4 py-4 slide-in">
                <div class="card h-100 shadow">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">{{name}}</h3>
                        <div class="mt-auto">
                            <input type="radio" class="btn-check teamSelector" name="options" id="team{{number}}" data-team-id="{{id}}" autocomplete="off">
                            <label for="team{{number}}">Choose</label>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <nav>
        <ul class="pagination pagination-lg justify-content-end">
            <li>
                <li class="page-item {{#unless hasPrev}}disabled{{/unless}}">
                    <a class="page-link" href="?page={{prevPage}}">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item {{#unless hasNext}}disabled{{/unless}}">
                    <a class="page-link" href="?page={{nextPage}}">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </li>
        </ul>
    </nav>
{{/if}}