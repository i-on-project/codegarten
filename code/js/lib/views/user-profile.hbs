<div class="rounded shadow" style="background-color: #EEEEEE;">
    <div class="row py-4">
        <div class="col-md-3 d-flex justify-content-center">
            <div class="row px-4">
                <img src={{userById.avatarUri}} class="rounded-circle img-thumbnail" width="256"/>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="row px-4">
                <h2 class="text-break">
                    <div id="username" style="display: inline-block;">
                        {{userById.username}}
                    </div>
                </h2>
            </div>
            <div class="row pl-4">
                <a href={{userById.gitHubUri}}> 
                    <img src="/res/github-32px.png" width="20" height="20" class="rounded-circle mb-1">
                    {{userById.gitHubName}}
                </a>
            </div>
        </div>
    </div>
</div>
